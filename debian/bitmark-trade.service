[Unit]
Description=Bitmark trade service
After=network.target

[Service]
Type=simple
Restart=on-failure

User=discovery
Group=discovery

PIDFile=/run/bitmark-trade.pid

StandardOutput=journal
StandardError=journal

WorkingDirectory=/var/lib/bitmark-trade
ExecStart=/usr/sbin/discovery --conf=/etc/bitmark-trade.conf

[Install]
WantedBy=multi-user.target
